{
    "compilerOptions": {
      "target": "es2017",
      "allowSyntheticDefaultImports": false,
      "baseUrl": "./",
      "paths": {
        "@app/*": ["src/*"],
        "@config/*": ["src/config/*"],
        "@controller/*": ["src/controller/*"],
        "@middleware/*": ["src/middleware/*"],
        "@helper/*": ["src/helper/*"],
        "@service/*": ["src/service/*"]
      }
},
"exclude": ["node_modules", "dist"]
}